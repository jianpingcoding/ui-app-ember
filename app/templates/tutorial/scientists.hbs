<!-- Component Arguments: title, people, HTML Attributes: class -->
<!-- Built-in Helpers: array helper,  -->
<Tutorial::PeopleList 
    @title="{{@model.title}}" 
    @people={{@model.scientists}}
    @hasCopyright={{true}} 
    class="tutorial-people-list"
    @contactPeopleNames={{array 'Tom Dale' 'Yehuda Katz'}} 
    @greatestPerson={{hash firstName='Jen' lastName='Weber'}}
    @multiple={{this.multiple}}
    @updateMultiple={{this.updateMultiple}}
    @copyright={{@model.copyright}} as |year name|
    >
    <!-- Block Parameters -->
    COPYRIGHT {{year}} {{name}} .
</Tutorial::PeopleList>    


<Tutorial::AudioPlayer srcURL="https://www.google.com"/> 
